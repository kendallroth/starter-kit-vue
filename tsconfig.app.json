{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "vite.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "module": "ESNext",
    "paths": {
      "#components/*": ["./src/components/*"],
      "#config/*": ["./src/config/*"],
      "#composables/*": ["./src/composables/*"],
      "#plugins/*": ["./src/plugins/*"],
      "#src/*": ["./src/*"]
    }
  }
}
